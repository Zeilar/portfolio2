{
  "compilerOptions": {
    "paths": {
      "@/components": ["components/index.ts"],
      "@/styles/*": ["styles/*"],
      "@/assets/*": ["assets/*"],
      "@/types": ["types/index.ts"],
      "@/common": ["common/index.ts"],
      "@/validators": ["validators/index.ts"],
      "@/hooks": ["hooks/index.ts"],
      "@/contexts": ["contexts/index.ts"]
    },
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["ES2022", "dom", "ES2022.String"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"]
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "app/**/*.js",
    "app/**/*.jsx",
    ".next/types/**/*.ts",
    "dist/portfolio2/.next/types/**/*.ts",
    "next-env.d.ts",
    "index.d.ts",
    "types/env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "tmp",
    "jest.config.ts",
    "app/**/*.spec.ts",
    "app/**/*.test.ts",
    "dist/portfolio2/**/*"
  ]
}
